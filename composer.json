{
    "name": "korchasa/app-blueprint",
    "description": "PHP app/lib blueprint",
    "license": "MIT",
	"authors": [
		{
			"name": "korchasa",
			"email": "korchasa@gmail.com"
		}
	],
    "require": {
    },
	"require-dev": {
        "php": ">=7.0",
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^6.0",
        "phpstan/phpstan": "*",
        "sebastian/phpcpd": "*",
        "squizlabs/php_codesniffer": "*"
	},
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check-loop": "while sleep 5; do clear && composer run-script check ; done",
        "check": [
            "@unit",
            "@analyze",
            "@style-fix",
            "@style"
        ],
        "style": "phpcs --standard=PSR2 src tests",
        "analyze": "phpstan analyse -l5 src tests",
        "unit": "phpunit",
        "style-fix": "phpcbf --standard=PSR2 src tests"
    }
}
